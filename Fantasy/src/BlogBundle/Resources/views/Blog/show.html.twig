{% extends "BlogBundle::layout.html.twig" %}
{% block title %}Urbiblog - Posts{% endblock %}

{% block body %}
	<h1>{{post.title}}</h1>

	<div class="date">Publicado: {{post.date|date('d-m-Y')}}</div>

	<div class="body">
		{{post.body}}
	</div>

	<section class="comments" id="comments">
		<section class="previous-comments">
			<h3>Comentarios</h3>
			{% include 'BlogBundle:Comment:list.html.twig' with { 'comments': comments } %}
		</section>

		<h3>AÃ±adir comentario</h3>
        {{ render(controller( 'BlogBundle:Comment:new', { 'post_id': post.id } )) }}
	</section>

{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link href="{{ asset('css/blog.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

