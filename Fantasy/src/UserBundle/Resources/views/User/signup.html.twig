{% extends "UserBundle::layout.html.twig" %}
{% block title %}Fantasy - Sign up{% endblock %}

{% block body %}
	{% if message %}
		<h3 id="message">{{ message }}</h3>
	{% endif %}
	<div class="container">
		<div class="col-md-12 text-center">
			<legend>Account information</legend>
		    <form class="horizontal-form" role="form" action="" method="POST" onsubmit="return(validate());">
		    	<div class="form-group">
		    		<label class="control-label col-md-6 text-right" for="email">Username</label>
		    		<div class="col-md-6">
		    			<input class="form-control" type="text" name="username" id="inputUsername" placeholder="Username" required autofocus>
		    		</div>
		    	</div>
		    	
		    	<div class="form-group">
		    		<label class="control-label col-md-6 text-right" for="password">Password</label>
		    		<div class="col-md-6">
		    			<input class="form-control" type="password" name="password" id="inputPassword" placeholder="Password" required>
		    		</div>
		    	</div>

		    	<div class="form-group">
		    		<label class="control-label col-md-6 text-right" for="password">First name</label>
		    		<div class="col-md-6">
		    			<input class="form-control" type="text" name="name" id="inputName" placeholder="First name" required>
		    		</div>
		    	</div>

		    	<div class="form-group">
		    		<label class="control-label col-md-6 text-right" for="password">Email</label>
		    		<div class="col-md-6">
		    			<input class="form-control" type="email" name="email" id="inputEmail" placeholder="Email address" required>
		    		</div>
		    	</div>
			  	<button class="btn btn-primary" id="signupButton" type="submit">Sign up</button>
			</form>
		</div>
	</div>

	<script>
		$(document).ready(
	    function validate()
	    {
	        $('#signupButton').click(
	        function()
	        {
	        	if ($('#inputUsername').val().length != 0 && $('#inputUsername').val().length <= 30)
	        	{
	        		if ($('#inputPassword').val().length != 0 && $('#inputPassword').val().length <= 30)
	        		{
	        			if ($('#inputName').val().length != 0 && $('#inputName').val().length <= 30)
	        			{
	        				if ($('#inputEmail').val().length != 0 && $('#inputEmail').val().length <= 50)
	        				{
	        					$(this).closest("form").attr("action", "{{ path('user_signupAttempt') }}");
	        					return true;
	        				}
	        				else
	        				{
	        					alert("The email must be 1-50 characters");
				        		$('#inputEmail').focus();
				        		return false;
	        				}
	        			}
	        			else
	        			{
	        				alert("The name must be 1-30 characters");
			        		$('#inputName').focus();
			        		return false;
	        			}
	        		}
	        		else
	        		{
		        		alert("The password must be 1-30 characters");
		        		$('#inputPassword').focus();
		        		return false;
	        		}
	        	}
	        	else
	        	{
	        		alert("The username must be 1-30 characters");
	        		$('#inputUsername').focus();
	        		return false;
	        	}
	        });
	    });
	</script>
{% endblock %}

