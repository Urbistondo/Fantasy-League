{% extends "UserBundle::layout.html.twig" %}
{% block title %}Fantasy - Welcome{% endblock %}

{% block body %}
	<div class="container">
		<div class="row-fluid">
			<div class="span12">
				<h1 class="text-center">Fantasy League</h1>
				<div class="well">
					<form action="" method="post" id="welcomeLoginForm" name="welcomeLoginForm">
						<input id="loginButton" type="submit" value="Log in">
						<input id="signupButton" type="submit" value="Sign up">
					</form>
				</div>
			</div>
		</div>
	</div>
	
	<script>
		$(document).ready(
			function initialize()
			{
				$("#loginButton").click(
					function()
					{
			   			$(this).closest("form").attr("action", "{{ path('user_login') }}");  
					}
				);

				$("#signupButton").click(
					function()
					{
			   			$(this).closest("form").attr("action", "http://fantasy/app_dev.php/signup");     
					}
				);
			}
		);
	</script>
{% endblock %}