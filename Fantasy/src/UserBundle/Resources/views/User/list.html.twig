						<td>{{ item.getName() }}</td>
						<td>{{ item.getLastname() }}</td>
						<td>{{ item.getPosition() }}</td>
						<td>{{ item.getClub() }}</td>
						<td>{{ item.getPoints() }}</td>
					</tr>
