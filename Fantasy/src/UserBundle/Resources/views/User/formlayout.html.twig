{% extends "UserBundle::layout.html.twig" %}
{% block title %}Fantasy - {{ title }}{% endblock %}

{% block body %}
    <div class="container">
		<div class="col-md-4 text-center">
			<legend>{{ legend }}</legend>

			{% if message %}
				<h3 id="message">{{ message }}</h3>
			{% endif %}

			<form class="horizontal-form" role="form" action="" method="POST" onsubmit="return(validate());">

			{% if login or signup %}
			    	<div class="form-group">
			    		<label class="control-label col-md-4 text-right" for="email">Username</label>
			    		<div class="col-md-8">
			    			<input class="form-control" type="text" name="username" id="inputUsername" placeholder="Username" required autofocus>
			    		</div>
			    	</div>
			    	
			    	<div class="form-group">
			    		<label class="control-label col-md-4 text-right" for="password">Password</label>
			    		<div class="col-md-8">
			    			<input class="form-control" type="password" name="password" id="inputPassword" placeholder="Password" required>
			    		</div>
			    	</div>
			{% endif %}

			{% if signup %}
			    	<div class="form-group">
			    		<label class="control-label col-md-4 text-right" for="password">First name</label>
			    		<div class="col-md-8">
			    			<input class="form-control" type="text" name="name" id="inputName" placeholder="First name" required>
			    		</div>
			    	</div>

			    	<div class="form-group">
			    		<label class="control-label col-md-4 text-right" for="password">Email</label>
			    		<div class="col-md-8">
			    			<input class="form-control" type="email" name="email" id="inputEmail" placeholder="Email address" required>
			    		</div>
			    	</div>
				</form>
			{% endif %}

				<button class="btn btn-primary" id="signupButton" type="submit">Sign up</button>
			</form>
		</div>
	</div>
{% endblock %}

{% block javascripts %}

{% endblock %}