{% extends "UserBundle::layout.html.twig" %}
{% block title %}Fantasy - Leagues{% endblock %}

{% block body %}
	{% if message != false %}
		<h4>{{ message }}</h4>
	{% endif %}
	<div class="list-group">
	  <a href="{{ path('admin_leagues_create') }}" class="list-group-item">Add player</a>
	  <a href="{{ path('admin_leagues_list', { 'edit': 1 }) }}" class="list-group-item">Edit league</a>
	  <a href="{{ path('admin_leagues_list', { 'edit': 0 }) }}" class="list-group-item">Remove league</a>
	  <a href="{{ path('admin_logout') }}" class="list-group-item">Exit</a>
	</div>
{% endblock %}