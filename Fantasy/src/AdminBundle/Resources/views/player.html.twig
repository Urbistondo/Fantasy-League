{% extends "UserBundle::layout.html.twig" %}
{% block title %}Fantasy - Players{% endblock %}

{% block body %}
	<legend>Player options</legend>
	{% if message %}
		<h4>{{ message }}</h4>
	{% endif %}
	<div class="list-group">
	  <a href="{{ path('admin_players_create') }}" class="list-group-item">Add player</a>
	  <a href="{{ path('admin_players_list', { 'edit': 1 }) }}" class="list-group-item">Edit player</a>
	  <a href="{{ path('admin_players_list', { 'edit': 0 }) }}" class="list-group-item">Remove player</a>
	  <a href="{{ path('admin_logout') }}" class="list-group-item">Exit</a>
	</div>
{% endblock %}